<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Верхняя шапка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Маленькая аватарка пользователя (Слева) -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_top_small"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Пустое пространство (растягивается) -->
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

            <!-- Иконка Человечка -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                app:tint="@color/black"
                android:layout_marginEnd="8dp"/>

            <!-- Иконка Вопросика -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_help"
                app:tint="@color/black"/>
        </LinearLayout>

        <!-- Линия разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="0dp"/>

        <!-- Остальной контент без изменений -->

        <!-- Приветствие -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Иван,\nприветствуем в нашем приложении"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Ряд из 3 аватарок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_row_1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_row_2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_row_3"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <!-- Кнопки КЛИК -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/clickButton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_click"
                android:backgroundTint="@color/dark_gray_button"
                android:layout_marginEnd="8dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_click"
                android:backgroundTint="@color/dark_gray_button"
                android:layout_marginEnd="8dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_click"
                android:backgroundTint="@color/dark_gray_button"/>
        </LinearLayout>

        <!-- Блок Предложения -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/suggestions"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/suggestion_1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/suggestion_2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="4dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/suggestion_3"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <!-- Радиокнопки (Города) -->
        <RadioGroup
            android:id="@+id/cityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/moscowRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_moscow"
                app:buttonTint="@drawable/custom_radio_color" />
            <RadioButton
                android:id="@+id/spbRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_st_petersburg"
                app:buttonTint="@drawable/custom_radio_color" />
            <RadioButton
                android:id="@+id/novosibirskRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_novosibirsk"
                app:buttonTint="@drawable/custom_radio_color" />
            <RadioButton
                android:id="@+id/vladivostokRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_vladivostok"
                app:buttonTint="@drawable/custom_radio_color" />
        </RadioGroup>

        <!-- Большая картинка внизу -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/lake_footer"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подробная информация"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>